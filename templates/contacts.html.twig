{% extends 'base.html.twig' %}

{% block title %} Contacts {% endblock %}

{% block body %}
<body background="{{ asset('assets/main/img/symphony.jpg') }} ">
    <div class="container col-xl-10 col-sm-12">
        <section class="my-5">
            <h1 class="h1-responsive font-weight-bold text-center my-5">Contact us</h1>
            <p class="text-center w-responsive mx-auto pb-5">The contact page is optimized to provide the most important
                information.</p>
            <div class="row">
                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="form-header blue accent-1">
                                <h3 class="mt-2 text-secondary">
                                    <i class="bi bi-envelope"></i>
                                    Write to us:
                                </h3>
                            </div>
                            <p class="text-secondary">We'll write rarely, but only the best content.</p>
                            <div class="md-form input-group flex-nowrap mb-3 shadow-sm">
                                <div class="input-group-prepend">
                                    <a class="navbar-brand brand-wrap">
                                        <i class="bi bi-person-fill"></i>
                                    </a>
                                </div>
                                <input type="text" id="form-name" class="form-control text-secondary"
                                       placeholder="Your name">
                            </div>
                            <div class="md-form input-group flex-nowrap mb-3 shadow-sm">
                                <div class="input-group-prepend">
                                    <a class="navbar-brand brand-wrap">
                                        <i class="bi bi-envelope-open-fill"></i>
                                    </a>
                                </div>
                                <input type="text" id="form-email" class="form-control text-secondary"
                                       placeholder="Your email">
                            </div>
                            <div class="md-form input-group flex-nowrap mb-3 shadow-sm">
                                <div class="input-group-prepend">
                                    <a class="navbar-brand brand-wrap">
                                        <i class="bi bi-tags-fill"></i>
                                    </a>
                                </div>
                                <input type="text" id="form-Subject" class="form-control text-secondary"
                                       placeholder="Subject">
                            </div>
                            <div class="md-form input-group flex-nowrap mb-3 shadow-sm">
                                <div class="input-group-prepend">
                                    <a class="navbar-brand brand-wrap">
                                        <i class="bi bi-chat-square-fill"></i>
                                    </a>
                                </div>
                                <textarea id="form-text" class="form-control md-textarea text-secondary" rows="3"
                                          placeholder="Write message"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div id="map-container-section" class="z-depth-1-half map-container-section mb-4"
                         style="height: 450px">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2729.221796529417!2d29.025560115123568!3d46.83932354865727!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c99e4f8d092f3b%3A0x73ba943177dbadff!2sASCONI+Winery!5e0!3m2!1sen!2s!4v1561881493066!5m2!1sen!2s"
                                width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                    <div class="row text-center">
                        <div class="col-md-4 ic">
                            <a class="navbar-brand brand-wrap">
                                <i class="bi bi-geo-alt-fill"></i>
                            </a>
                            <p class="mb-0 text-secondary">New York, 94126</p>
                            <p class="mb-md-0 text-secondary">United States</p>
                        </div>
                        <div class="col-md-4 ic">
                            <a class="navbar-brand brand-wrap">
                                <i class="bi bi-telephone-forward-fill"></i>
                            </a>
                            <p class="mb-0 text-secondary">+ 01 234 567 89</p>
                            <p class="mb-md-0 text-secondary">Mon - Fri, 8:00-22:00</p>
                        </div>
                        <div class="col-md-4 ic">
                            <a class="navbar-brand brand-wrap">
                                <i class="bi bi-envelope"></i>
                            </a>
                            <p class="mb-0 text-secondary">info@gmail.com</p>
                            <p class="mb-0 text-secondary">sale@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <hr/>
{% endblock %}