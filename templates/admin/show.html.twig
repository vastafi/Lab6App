{% extends 'default.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <section class="header-main">
        <div class="container">
            <a class="btn btn-warning" href="{{ path('adminpr') }}">Back to list</a>

            <div class="row d-flex justify-content-center align-items-center">
                <div class="container col-xl-6 col-sm-12">
                    <header class="card-header">
                        <h1 class="card-title mt-2">Product</h1>
                    </header>
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ product.id }}</td>
                        </tr>
                        <tr>
                            <th>Code</th>
                            <td>{{ product.code }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>Category</th>
                            <td>{{ product.category }}</td>
                        </tr>
                        <tr>
                            <th>Price</th>
                            <td>{{ product.price }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ product.description }}</td>
                        </tr>
                        <tr>
                            <th>Available amount</th>
                            <td>{{ product.availableAmount }}</td>
                        </tr>
                        <tr>
                            <th>ProductImage</th>
                            <td>
                            {% for image in product.productImages %}
                            {{ image }},
                            {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <th>CreatedAt</th>
                            <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>UpdatedAt</th>
                            <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <a class="btn btn-sm btn-success mr-1" href="{{ path('edit', {'productCode': product.code}) }}">Edit</a>
                        {{ include('admin/_delete_form.html.twig') }}
                    </div>
                </div> <!-- container-->
            </div> <!-- cart -->
        </div> <!-- container-->
    </section>
{% endblock %}
