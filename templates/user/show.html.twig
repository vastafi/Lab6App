{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <body background="{{ asset('assets/main/img/symphony.jpg') }} ">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="container col-xl-6 col-sm-12">
                <h1>User</h1>
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>
                            {% for role in user.roles %}
                                {{ role | replace ({'ROLE_' : ' '}) }}
                            {% endfor %}
                        </td>
                    </tr>
                    <tr>
                        <th>Is verified</th>
                        {% if user.isVerified == false %}
                            <td> No</td>
                        {% else %}
                            <td> Yes</td>
                        {% endif %}
                    </tr>

                    </tbody>
                </table>
                <a style="width: 50px" class="btn btn-sm btn-success" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                {{ include('user/_delete_form.html.twig') }}
                <a href="{{ path('user_index') }}">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
