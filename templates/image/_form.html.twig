{{ form_start(form) }}

{% if errors is defined and errors is not null %}
    {% for error in errors %}
        <div class="alert alert-danger">
            <span class="d-block">
                <span class="form-error-icon badge badge-danger text-uppercase">Error</span>
                <span class="form-error-message">{{ error }}</span>
            </span>
        </div>
    {% endfor %}
{% endif %}

    {{ form_widget(form) }}
   <div class="mt-3">
    <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
    <button type="reset" class="btn btn-secondary">{{ button_label|default('Reset') }}</button>
</div>
{{ form_end(form) }}
