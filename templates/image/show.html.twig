{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <section class="header-main">
        <div class="container">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="container col-xl-6 col-sm-12">
                    <h1>Image</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ image.id }}</td>
                        </tr>
                        <tr>
                            <th>Tag</th>
                            <td>{{ image.tag ? image.tag|join(', ') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Path</th>
                            <td>{{ image.path }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% set fullImagePath = 'assets/main/img/gallery/' %}
                                {% set fullImagePath = fullImagePath ~ image.path %}
                                <img src="{{ asset(fullImagePath) }}" alt="" height="250px">
                            </td>
                        </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <a class="btn btn-sm btn-success" href="{{ path('image_edit', {'id': image.id}) }}">Edit</a>
                        {{ include('image/_delete_form.html.twig') }}
                    </div>
                    <a href="{{ path('image_index') }}">Back to list</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
